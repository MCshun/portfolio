extends layout.pug

block head
  title プロフィール
  link(rel="stylesheet", href="/stylesheets/profile.css")
  link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css', type='text/css')
  style.
    .vertical-navbar {
      position: fixed;
      left: 50px; /* 左に隙間を開ける */
      top: 50px; /* 上に隙間を開ける */
      width: 265px;
      height: calc(100% - 40px); /* 上下の隙間を考慮 */
      background-color: #cc0000; /* 赤っぽい背景色に変更 */
      padding-top: 50px;
      display: flex;
      flex-direction: column;
      align-items: center;
      color: white;
      border-radius: 15px; /* 角を丸くする */
      box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1); /* 影を追加して立体感を出す */
    }
    .logo-container {
      display: flex;
      align-items: center;
      margin-bottom: 30px;
    }
    .logo-container img {
      width: 55px; /* ロゴ画像のサイズを調整 */
      height: 55px;
    }
    .logo-container .logo-text {
      font-size: 1.5rem;
      font-weight: bold;
    }
    .vertical-navbar a {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15px 20px;
      width: 90%;
      text-decoration: none;
      color: white;
      font-size: 1.1rem;
      border-radius: 8px;
      transition: background-color 0.3s;
    }
    .vertical-navbar a:hover {
      background-color: #ff6666; /* ホバー時の背景色 */
    }
    .vertical-navbar .section-divider {
      width: 80%;
      height: 1px;
      background-color: rgba(255, 255, 255, 0.3);
      margin: 20px 0;
    }
    .vertical-navbar .icon {
      font-size: 1.2rem;
    }
    .button-container {
      margin-top: auto;
      display: flex;
      gap: 15px;
      padding-bottom: 70px;
    }
    .button-container a {
      background-color: #ffffff;
      color: #cc0000;
      padding: 10px 50px;
      padding-left: px; /* 左側の余白を増やして右にずらす */
      border-radius: 10px;
      font-size: 1rem;
      text-align: center;
      font-weight: bold;
      display: flex;
      flex-direction: column;
      align-items: center;
      white-space: nowrap;
    }
    .top_main {
      padding-left: 200px;
    }


block main_content
  .top_main
    .container
      // プロフィール情報の表示
      .profile-container
        .text-center
          if json_data.favoriteAgentImage
            #agentImage-container
              img#agentImage(src=json_data.favoriteAgentImage, alt="エージェント画像")
          else
            p エージェント画像は選択されていません
        .profile-details
          p
            strong DiscordID:
            | #{json_data.discord}
          p
            strong ValorantID:
            | #{json_data.valorantID}
          p
            strong 性別:
            | #{json_data.gender}
          p
            strong ランク帯:
            | #{json_data.rank}
          p
            strong 好きなエージェント:
            | #{json_data.favoriteAgent}
          p
            strong コメント:
            | #{json_data.comments}
        .text-center.mt-4
          a.btn.btn-primary(href="/profile/edit") 編集
