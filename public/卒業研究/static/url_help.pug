//- toukou.pug: 投稿ページ
//- レイアウトテンプレート
extends layout.pug

block head
  title= title
  link(rel='stylesheet', href='/stylesheets/style.css', type='text/css')
  link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css', type='text/css')
  link(rel='stylesheet', href='/stylesheets/toukou.css', type='text/css')
  style.
    .vertical-navbar {
      position: fixed;
      left: 50px; 
      top: 50px; 
      width: 265px;
      height: calc(100% - 40px); 
      background-color: #cc0000; 
      padding-top: 50px;
      display: flex;
      flex-direction: column;
      align-items: center;
      color: white;
      border-radius: 15px; 
      box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1); 
    }
    .logo-container {
      display: flex;
      align-items: center;
      margin-bottom: 30px;
    }
    .logo-container img {
      width: 55px; 
      height: 55px;
    }
    .logo-container .logo-text {
      font-size: 1.5rem;
      font-weight: bold;
    }
    .vertical-navbar a {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 15px 20px;
      width: 90%;
      text-decoration: none;
      color: white;
      font-size: 1.1rem;
      border-radius: 8px;
      transition: background-color 0.3s;
    }
    .vertical-navbar a:hover {
      background-color: #ff6666; 
    }
    .vertical-navbar .section-divider {
      width: 80%;
      height: 1px;
      background-color: rgba(255, 255, 255, 0.3);
      margin: 20px 0;
    }
    .vertical-navbar .icon {
      font-size: 1.2rem;
    }
    .button-container {
      margin-top: auto;
      display: flex;
      gap: 15px;
      padding-bottom: 70px;
    }
    .button-container a {
      background-color: #ffffff;
      color: #cc0000;
      padding: 10px 50px;
      padding-left: px; 
      border-radius: 10px;
      font-size: 1rem;
      text-align: center;
      font-weight: bold;
      display: flex;
      flex-direction: column;
      align-items: center;
      white-space: nowrap;
    }
    .sub_main-container h2,
    .sub_main-container a,
    .sub_main-container p,
    .sub_main-container ul li {
      color: white;
      font-weight: bold;
    }
    .sub_main {
      padding-left: 100px;
    }
    .container, .container h2, .container h3, .container h4, .container p, .container ul li {
      color: white;
      font-weight: bold;
    }

block main_content
  .text-center
    img(src="/task_folder/URL.png", alt="検索", style="width: 850px; height: auto;")