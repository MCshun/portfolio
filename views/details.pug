doctype html
html(lang="ja")
  head
    meta(charset="UTF-8")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    title= site.title
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
  body
    .container.mt-5
      h1.text-center= site.title
      p.text-center= site.description
      img.img-fluid.mx-auto.d-block(src=site.image alt=site.title)

      h2.mt-4 特徴
      ul
        each feature in site.features
          li= feature

      h3.mt-4 価格: #{site.price}

      .text-center.mt-4
        a.btn.btn-success(href="/contact") 購入・問い合わせ

      .text-center.mt-3
        a.btn.btn-secondary(href="/") 戻る

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js")
